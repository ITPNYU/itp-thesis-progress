<div class="post">
  <hgroup>
  <h1><a href="<%= post.url %>"><%= post.title %></a></h1>
  <h3 class="date"><%= post.published_at.strftime("%B %d") %></h3>
  <% if post.category %>
  <h4 class="category"><a href="<%= post.user.url %>/progress/<%= post.category.slug %>"><%= post.category %></a></h4>
  <% end %>
  </hgroup>

  <div class="post-content">
    <%= mdown post.content %>
  </div>

  <div clas="post-footer">
    <a class="permalink" href="<%= post.url %>">Permalink</a>
  </div>
</div>
