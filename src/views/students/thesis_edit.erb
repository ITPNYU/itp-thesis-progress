<h1>Your Thesis</h1>

<form action="<%= @thesis.user.url %>/thesis/update" method="post" enctype="multipart/form-data">

  <div class="row">
    <fieldset class="col-8">
      <div class="spaced-row">
        <h6>Title</h6>
        <input type="text" name="thesis[title]" value="<%= @thesis.title %>" placeholder="Thesis Title">
      </div>

      <div class="spaced-row">
        <h6>Elevator Pitch</h6>
        <textarea placeholder="Elevator Pitch" name="thesis[elevator_pitch]"><%= @thesis.elevator_pitch %></textarea>
      </div>

      <div class="spaced-row">
        <h6>Description</h6>
        <div class="expanding-area">
        <pre><span></span><br></pre>
        <textarea name="thesis[description]" class="description skinny" placeholder="Description"><%= @thesis.description %></textarea>
        </div>
      </div>

      <div class="spaced-row">
        <h6>Why You Want to Make This</h6>
        <div class="expanding-area">
          <pre><span></span><br></pre>
          <textarea name="thesis[reason]" placeholder="Why You Want to Make This"><%= @thesis.reason %></textarea>
        </div>
      </div>

      <div class="spaced-row">
        <h6>Research Plan</h6>
        <div class="expanding-area">
          <pre><span></span><br></pre>
          <textarea name="thesis[research_plan]" placeholder="Enter a research plan"><%= @thesis.research_plan %></textarea>
        </div>
      </div>

    </fieldset>

    <fieldset class="col-4">
      <div class="spaced-row">
      <h6>Image (optional)</h6>
      <% if @thesis.image.nil? || @thesis.image == "" %>
        <p>no image</p>
      <% else %>
        <img src="<%= @thesis.image %>" />
      <% end %>

      <p>Replace your image: <input type="file" name="image"></p>
      </div>

      <div class="spaced-row">
        <h6>URL (optional)</h6>
        <input name="thesis[link]" value="<%= @thesis.link %>" placeholder="http://">
      </div>

    </fieldset>

    <fieldset class="col-4 button-labels">
      <div class="spaced-row">
      <h6>Thesis Privacy</h6>
      <p>Select "World" to have your thesis be viewable to anyone with the link.</p>
      <input type="radio" id="private-thesis" name="user[public_thesis]" value="false" <% if !@thesis.user.public_thesis %>checked<% end %>>
      <label for="private-thesis">NYU</label>

      <input type="radio" id="public-thesis" name="user[public_thesis]" value="true" <% if @thesis.user.public_thesis %>checked<% end %>>
      <label for="public-thesis">WORLD</label>
      </div>
    </fieldset>
  </div>

  <fieldset class="col-12 row">
  <input type="submit" value="Save">
  </fieldset>
</form>