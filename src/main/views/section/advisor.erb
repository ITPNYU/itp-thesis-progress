<div class="col-3">
  <h3><%= (@sections.map {|s| s.name}).join(", ") %></h3>

  <% @sections.assignments.each do |assignment| %>
  <p><a href="/assignments/<%= assignment.year %>/<%= assignment.id %>"><%= assignment.title %></a></p>
  <% end %>

  <h3>Students</h3>
  <% @sections.each do |section| %>
  <h6><%= section.name %></h6>
  <ul>
  <% section.students.each do |student| %>
    <li><a href="/sections/<%= section.year %>/<%= section.slug %>/<%= student.netid %>"><%= student %></a></li>
  <% end %>
  </ul>
  <% end %>
</div>

<div class="col-9">
  <h3>Announcements</h3>
  <% @sections.announcements.paginate(:page => 1).each do |announcement| %>
    <div><%= announcement.title %></div>
  <% end %>
  <h3>Recent Posts</h3>
<% @sections.students.posts.paginate(:page => 1).each do |post| %>
  <div>
    <%= post.title %>
  </div>
<% end %>
</div>