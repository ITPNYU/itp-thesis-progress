<h3>
  <input type="text" name="post[title]" placeholder="Title of Post..." value="<%= @post.title %>"/>
</h3>

<div class="meta-form-elements">
<h6>Category</h6>
<fieldset class="button-labels">
  <% @categories.each do |category| %>
  <input type="radio" value="<%= category.id %>" name="post[category_id]" id="category-<%= category.id %>" <%= "checked" if @post.category == category %>>
  <label for="category-<%= category.id %>"><%= category.name %></label>
  <% end %>
</fieldset>

<h6>Assignments</h6>
<fieldset class="button-labels">
  <% if @post.assignment %>
  <input type="radio" checked value="<%= @post.assignment_id %>" name="post[assignment_id]" id="assignment-<%= @post.assignment_id %>">
  <label for="assignment-<%= @post.assignment_id %>"><%= @post.assignment.title %></label>
  <% end %>
  <% env['warden'].user.open_assignments.each do |assignment| %>
  <input type="radio" value="<%= assignment.id %>" name="post[assignment_id]" id="assignment-<%= assignment.id %>" >
  <label for="assignment-<%= assignment.id %>"><%= assignment.title %></label>
  <% end %>
</fieldset>
</div>

<div class="expanding-area">
  <pre><span></span><br></pre>
  <textarea placeholder="Write your post here..." name="post[content]"><%= @post.content %></textarea>
</div>

<div class="action-buttons">
  <button id="private" name="post[private]" value="true">Draft</button>
  <button id="public" name="post[private]" value="false">Public</button>
</div>