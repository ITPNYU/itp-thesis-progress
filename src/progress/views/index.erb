<% @posts.each do |post| %>
  <div class="post">

    <h2>
      <a href="<%= post.url %>"><%= post.title %></a>
    </h2>

    <hgroup class="details">
      <h6><%= post.date.strftime("%m/%d") %> <span class="publish-state"><%= post.draft %></span></h6>
      <span class="category"><%= post.category %></span>
      <a href="<%= post.url %>/edit">EDIT</a>
    </hgroup>

    <div class="post-content">
      <%= mdown(post.content || "") %>
    </div>

  </div>
<% end %>

<%= will_paginate @posts %>