<div class="col-3">
  <%= erb :sidebar, layout: false, locals: {user: @user} %>
</div>

<div class="col-9">
  <h2>Thesis</h2>
  <% if @user == env['warden'].user %>
  <a href="<%= @user.url %>/thesis/edit">Edit</a>
  <% end %>
</div>

<div class="col-6">
  <div class="spaced-row">
    <h6>Title</h6>
    <h3><%= @thesis.title %></h3>
  </div>

  <div class="spaced-row">
    <h6>Elevator Pitch</h6>
    <%= @thesis.elevator_pitch %>
  </div>

  <div class="spaced-row">
    <h6>Description</h6>
    <%= @thesis.description %>
  </div>

  <div class="spaced-row">
    <h6>Why You Want to Make This</h6>
    <%= @thesis.reason %>
  </div>

  <div class="spaced-row">
    <h6>Research Plan</h6>
    <%= @thesis.research_plan %>
  </div>

</div>

<div class="col-3">
  <div class="spaced-row">
  <h6>Image</h6>
  <img style="width: 100%;"src="<%= @thesis.image %>" />
  </div>

  <div class="spaced-row">
    <h6>URL</h6>
    <a href="<%= @thesis.link %>"><%= @thesis.link %></a>
  </div>
</div>