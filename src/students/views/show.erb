<div class="col-9">

<div class="post single">
  <h2><%= @post.title %></h2>

  <hgroup class='details'>
    <span class="published"><%= @post.draft ? "Draft" : "Published" %></span>
    <span class="category"><%= @post.category %></span>
  </hgroup>

  <div class="post-content">
    <%= mdown @post.content %>
  </div>

  <div class="comments">
    <div class="new-comment" data-user-id="<%= env['warden'].user.id %>" data-post-id="<%= @post.id %>">
      <h6>Add a Comment</h6>
      <div class="expanding-area">
        <pre><span></span><br></pre>
        <textarea placeholder="Write your comment here..." name="comment[content]"></textarea>
      </div>
      <button class="small">Add Comment</button>
    </div>


    <% @post.comments(order: :created_at.desc).each do |comment| %>
      <div class="comment">
        <div class="comment-head">
          <span class="date"><%= comment.created_at.strftime("%m/%d") %></span> <%= comment.user %>
        </div>
        <div class="comment-body">
          <%= mdown comment.content %>
        </div>
      </div>
    <% end %>
  </div>
</div>

</div>