<div class="post">
  <hgroup>
  <h1><a href="<%= post.url %>"><%= post.title %></a></h1>
  <h2><a href="<%= post.user.url %>"><%= post.user %></a></h2>
  <h3 class="date"><%= longdate post.published_at %></h3>
  <h4 class="category"><%= post.category %></h4>
  </hgroup>

  <div class="post-content">
    <%= mdown post.content %>
  </div>

  <div clas="post-footer">
    <a class="permalink" href="<%= post.url %>">Permalink</a>
  </div>
</div>
